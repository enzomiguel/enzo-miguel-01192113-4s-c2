<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TelaCadastro">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/layout_topo"
        android:orientation="vertical">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_raca"
            android:textSize="20sp"
            android:hint="Raça:"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_precoMedio"
            android:textSize="20sp"
            android:hint="Preço Médio:"
            app:layout_constraintTop_toBottomOf="@+id/et_raca"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/et_indicadoCriancas"
            android:textSize="2sp"
            android:text="Indicado Crianças"
            app:layout_constraintTop_toBottomOf="@+id/et_precoMedio"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_criarCachorro"
            app:layout_constraintTop_toBottomOf="@+id/et_indicadoCriancas"
            android:text="Criar cachorro"
            android:onClick="addCachorro"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_consulta"
            android:textSize="30sp"
            app:layout_constraintTop_toBottomOf="@+id/et_indicadoCriancas"
            />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>